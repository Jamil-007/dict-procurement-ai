# LLM Provider (vertex_ai or anthropic)
LLM_PROVIDER=anthropic  # Use anthropic during development until Vertex AI is set up

# Vertex AI (for production)
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Anthropic (fallback for development)
ANTHROPIC_API_KEY=your-anthropic-key

# Tavily
TAVILY_API_KEY=your-tavily-key

# Gamma (optional for MVP)
GAMMA_API_KEY=your-gamma-key

# Storage
UPLOAD_DIR=./uploads

# State Persistence
STATE_STORAGE=memory  # memory, sqlite, or postgres
